<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewRandomMeal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="8dp"
    >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView_meal_fav_item"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:scaleType="fitXY"
            android:src="@drawable/meal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius_top_left="16dp"
            app:riv_corner_radius_top_right="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/txt_layer_bg"
        >

        <TextView
            android:id="@+id/tv_meal_title_fav_item"
            style="@style/base_txt"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="12dp"
            android:gravity="start"
            tools:text="Favorite mealDto" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ic_remove_meal_fav_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:padding="2dp"
            android:src="@drawable/ic_fav"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>